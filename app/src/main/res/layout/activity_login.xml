<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:gravity="center">

    <!-- Gambar Ilustrasi -->
    <ImageView
        android:id="@+id/imageLoginIllustration"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/login_image"
        android:contentDescription="Login Illustration"
        android:layout_gravity="center" />

    <!-- Judul -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:fontFamily="@font/open_sans_bold"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:gravity="center" />

    <!-- Sub Judul -->
    <TextView
        android:id="@+id/textViewSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lets Get Started"
        android:fontFamily="@font/open_sans_regular"
        android:textSize="16sp"
        android:textColor="#555555"
        android:gravity="center" />

    <TextView
        android:id="@+id/textViewCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="create an account"
        android:fontFamily="@font/open_sans_regular"
        android:textSize="14sp"
        android:textColor="#777777"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Input Email atau Nomor Handphone -->
    <EditText
        android:id="@+id/editTextEmailOrMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email or Mobile"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/open_sans_regular"
        android:padding="12dp"
        android:background="@drawable/red_border"
        android:textColor="@color/black"
        android:textColorHint="#999999"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="20dp"
    />

    <!-- Input Password dengan Toggle Visibility -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
         android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:background="@drawable/red_border"
            android:textColorHint="#999999"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/iconTogglePassword"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:contentDescription="Toggle Password Visibility"
            android:padding="8dp"
            android:src="@drawable/ic_visibility_off" />
    </LinearLayout>

    <!-- Tombol Login -->

    <!-- Teks untuk Sign In -->

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="20dp"
         android:background="@drawable/red_button"
        android:padding="18dp"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/open_sans_bold"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:fontFamily="@font/open_sans_regular">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textColor="#777777"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" sign up"
            android:textColor="#FF0000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingStart="4dp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

</LinearLayout>
